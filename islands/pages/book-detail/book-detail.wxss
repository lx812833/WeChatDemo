/* components/book-detail/book-detail.wxss */
.container {
    background-color: #f5f5f5;
    width: 100%;
}

.head {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 40rpx;
    padding-bottom: 40rpx;
    background-color: #fff
}

.head image {
    width: 200rpx;
    height: 300rpx;
    box-shadow: 2px 2px 3px #e3e3e3
}

.title {
    font-size: 38rpx;
    font-weight: 600;
    color: #2f2f2f;
    margin-top: 20rpx;
}

.author {
    font-size: 28rpx;
    color: #999
}

.sub-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 690rpx;
    margin-top: 30rpx;
    background-color: #fff;
    padding: 30rpx;
}

.top {
    margin-top: 30rpx;
}

.headline {
    font-size: 30rpx;
    font-weight: 600;
    color: #2f2f2f;
    margin-bottom: 20rpx;
}

.comment-container {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
        /* 自动换行的组件之间margin-bottom生效要在外层包裹flex布局并且wrap*/
}

.comment-container v-tag {
    margin-right: 15rpx;
    margin-bottom: 10rpx;
}

.nums {
    margin-left: 15rpx;
    font-size: 22rpx;
    color: #aaa;
}

/* 对自定义组件设置CSS样式 */
.comment-container>v-tag:nth-child(1)>view {
    background-color: #fffbdd
}

.comment-container>v-tag:nth-child(2)>view {
    background-color: #8cb9c7
}

/* 外部样式 */
/* .ex-class:nth-child(2) > view {
    background-color: #6e6731 !important
} */

.content {
    font-weight: 500;
    text-indent: 58rpx;
    /* 规定文本块中首行文本的缩进 */
}

.detail-container {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    width: 100%;
    margin-bottom: 100rpx;
    font-size: 28rpx;
    color: #666;
}

.vertical {
    display: flex;
    flex-direction: column
}

.description {
    margin-right: 30rpx;
    color: #999;
}

.post-container {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    position: fixed;
    width: 690rpx;
    height: 100rpx;
    bottom: 0;
    padding: 0 30rpx;
    box-shadow: 1px -1px 1px #e3e3e3;
    background-color: #fff;
}

.post-fake {
    display: flex;
    flex-direction: row;
    align-items: center;
    width: 460rpx;
    height: 60rpx;
    padding-left: 20rpx;
    border: 1px solid #999;
    border-radius: 15px;
    font-size: 22rpx;
}

.like-container {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between
}

.like {
    margin-right: 30rpx;
    margin-top: 10rpx;
}

.posting-container {
    bottom: 0;
    position: fixed;
    display: flex;
    flex-direction: column;
    align-items: center;
    /* width:690rpx; */
    background-color: #fff;
    width: 100%;
    z-index: 999;
}

.posting-header {
    width: 100%;
    border-bottom: 1px solid #f5f5f5;
    border-top: 1px solid #f5f5f5;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.posting-header text {
    padding: 25rpx;
}

.cancel {
    color: #666;
}

.posting-container .comment-container {
    width: 690rpx;
    padding: 0 30rpx;
}

.posting-header>text:first-child {
    font-size: 28rpx;
    color: #bbb;
}
.posting-text {
    width: 690rpx;
    margin: 30rpx auto;
    height: 56rpx;
    background-color: #cfcaca;
    border-radius: 15px;
    padding-left: 25rpx;
}
.shadow {
    color: #999;
}
