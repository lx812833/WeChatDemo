/* pages/use/use.wxss */
.test {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100rpx;
  height: 100rpx;
  font-size: 24rpx;
  color: #FFFFFF;
  background: red;
}

.test-1 {
  background: pink;
}

.scroll-container {
  display: flex;
  flex-wrap: nowrap;
  width: 100%;
}

.scroll-item {
  width: 200rpx;
  height: 100rpx;
  flex: 0 0 200rpx;
  margin-right: 10rpx;
  background: yellowgreen;
}

.scroll-item:last-child {
  margin-right: 0;
}

.input-item {
  border: 1rpx solid #CCC;
  padding: 0 5rpx;
}

.btn {
  display: flex;
  align-items: center;
  padding: 8px 50px 8px;
  border: 1px solid #b2b2b2;
  background-color: #f2f2f2;
}

.circle-btn__hover_btn {
  opacity: 0.8;
  transform: scale(0.95, 0.95);
}

.rect-btn__hover_btn {
  position: relative;
  top: 3rpx;
  left: 3rpx;
  box-shadow: 0px 0px 8px rgba(175, 175, 175, .2) inset;
}