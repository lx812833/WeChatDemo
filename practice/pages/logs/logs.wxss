.picker-view {
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 500rpx;
  bottom: 0;
  left: 0;
  background-color: #fff;
}

.picker-view__pane {
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  width: 100%;
  padding: 20rpx 32rpx;
  box-sizing: border-box;
}

.picker-view__pane text {
  color: #00cc88;
  font-size: 30rpx;
}