/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

/* 全局修改进度条样式 */
.wx-progress-info {
  color: red;
  margin-left: 5px;
}

@font-face {
  font-family: 'iconfont';  /* project id 638417 */
  src: url('//at.alicdn.com/t/font_638417_nzjku5msu0b.eot');
  src: url('//at.alicdn.com/t/font_638417_nzjku5msu0b.eot?#iefix') format('embedded-opentype'),
  url('//at.alicdn.com/t/font_638417_nzjku5msu0b.woff2') format('woff2'),
  url('//at.alicdn.com/t/font_638417_nzjku5msu0b.woff') format('woff'),
  url('//at.alicdn.com/t/font_638417_nzjku5msu0b.ttf') format('truetype'),
  url('//at.alicdn.com/t/font_638417_nzjku5msu0b.svg#iconfont') format('svg');
}

.iconfont {
  font-family: 'iconfont';
  font-size: 40rpx;
}
.icon-turnip::before {
  content: '\e63e';
  color: green;
}
.icon-leek::before {
  content: '\e63f';
  color: red;
}